<li class="activity-exercise clearfix{{#if earnedProficiency}} proficient{{/if}}">
    <div class="ach-text">
        <div class="clearfix">
            <span class="activity-image"></span>
            <div class="description">
                Heeft <span class="problem-count">{{#unless mobileView}}<a href="{{ profileRoot }}vital-statistics/problems/{{exercise}}">{{/unless}}{{pluralize cProblems "problem"}}{{#unless mobileView}}</a>{{/unless}}</span>{{#if earnedProficiency}} beantwoord om bekwaam{{/if}} te worden in {{exerciseDisplayName}}
            </div>
        </div>
        <div class="activity-controls">
            <span class="time timeago" title="{{dt}}">{{dt}}</span>
        </div>
    </div>
</li>

